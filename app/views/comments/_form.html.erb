<%= form_for([blog,comment], url:blog_comments_path(blog.id), remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
