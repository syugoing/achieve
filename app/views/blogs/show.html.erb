<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>ブログ詳細</h2>
    <p id="notice"><%= notice %></p>

      <div class="child row">
        <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
          <div class="blog-text">
            <%= profile_img(@blog.user) if profile_img(@blog.user) %>
            <h5 style="display:inline;">&nbsp;&nbsp;&nbsp;<%= @blog.user.name  %>が投稿しました。</h5>
            <p class="left"><strong>タイトル</strong></p>
            <p class="left"><%= @blog.title %></p>
            <p class="left"><strong>内容</strong></p>
            <p class="left"><%= @blog.content %></p>
            <p class="right">
              <strong>作成時間:</strong>
              <%= @blog.created_at.strftime("%y/%m/%d %p %l:%M") %>
          </div>
          <p>コメント一覧</p>
          <div id="comments_area">
            <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
          </div>
          <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
          <% if current_user.id == @blog.user_id %>
            <%= link_to '編集', edit_blog_path(@blog) %> |
          <% end %>
          <%= link_to '戻る', blogs_path %>
        </div>
      </div>

    <%= link_to "ブログ一覧画面にもどる", blogs_path %>

  </div>
</div>
